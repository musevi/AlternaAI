{
  "manifest_version": 3,
  "name": "Alt Text Extractor",
  "version": "1.0",
  "description": "Lists all images on the current page and their alt text.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
